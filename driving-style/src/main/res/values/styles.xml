<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="windowNoTitle">true</item>
	</style>

	<!-- Fonts -->
	<style name="MediumInactiveTextStyle">
		<item name="android:textColor">@color/textInactive</item>
		<item name="android:textColorHint">?android:textColorHint</item>
		<item name="android:textColorHighlight">?android:textColorHighlight</item>
		<item name="android:textColorLink">?android:textColorLink</item>
		<item name="android:textSize">@dimen/medium_font_size</item>
	</style>

	<style name="SmallInactiveTextStyle">
		<item name="android:textColor">@color/textInactive</item>
		<item name="android:textColorHint">?android:textColorHint</item>
		<item name="android:textColorHighlight">?android:textColorHighlight</item>
		<item name="android:textColorLink">?android:textColorLink</item>
		<item name="android:textSize">@dimen/small_font_size</item>
	</style>

	<style name="MediumTextStyle">
		<item name="android:textColor">@color/textPrimary</item>
		<item name="android:textColorHint">?android:textColorHint</item>
		<item name="android:textColorHighlight">?android:textColorHighlight</item>
		<item name="android:textColorLink">?android:textColorLink</item>
		<item name="android:textSize">@dimen/medium_font_size</item>
	</style>

	<style name="SmallTextStyle">
		<item name="android:textColor">@color/textPrimary</item>
		<item name="android:textColorHint">?android:textColorHint</item>
		<item name="android:textColorHighlight">?android:textColorHighlight</item>
		<item name="android:textColorLink">?android:textColorLink</item>
		<item name="android:textSize">@dimen/small_font_size</item>
	</style>

	<style name="LargeTextStyle">
		<item name="android:textColor">@color/textPrimary</item>
		<item name="android:textColorHint">?android:textColorHint</item>
		<item name="android:textColorHighlight">?android:textColorHighlight</item>
		<item name="android:textColorLink">?android:textColorLink</item>
		<item name="android:textSize">@dimen/large_font_size</item>
		<item name="android:layout_margin">@dimen/activity_vertical_margin</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="BigTitleStyle">
		<item name="android:textColor">@color/textPrimary</item>
		<item name="android:textColorHint">?android:textColorHint</item>
		<item name="android:textColorHighlight">?android:textColorHighlight</item>
		<item name="android:textColorLink">?android:textColorLink</item>
		<item name="android:textSize">@dimen/large_font_size</item>
		<item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
		<item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="SharedButtonStyle">
		<item name="android:textColor">@color/textPrimary</item>
		<item name="android:textSize">@dimen/small_font_size</item>
		<item name="android:background">@drawable/shared_button_bg</item>
	</style>

	<style name="BorderlessButtonStyle">
		<item name="android:textColor">@color/colorAccent</item>
		<item name="android:background">@drawable/padding_pattern</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">@dimen/small_font_size</item>
	</style>

	<style name="BigButtonStyle">
		<item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
		<item name="android:textColor">@color/textPrimary</item>
		<item name="android:background">@drawable/big_button_bg</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">@dimen/small_font_size</item>
	</style>

	<style name="CheckBoxStyle" parent="Theme.AppCompat.Light">
		<item name="colorControlNormal">@color/colorAccent</item>
		<item name="colorControlActivated">@color/colorAccent</item>
	</style>

	<style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
		<item name="colorControlNormal">@color/colorAccent</item>
		<item name="colorControlActivated">@color/colorAccent</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">20dp</item>
	</style>

</resources>
